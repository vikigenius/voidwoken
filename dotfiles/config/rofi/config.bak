! ------------------------------------------------------------------------------
!                      ROFI Settings
! ------------------------------------------------------------------------------

! General
rofi.font:                Inconsolata 15
rofi.fake-transparency:   false
rofi.hide-scrollbar:      true
rofi.show-icons           true

! Layout
rofi.color-enabled:      true
rofi.separator-style:    none
rofi.line-padding:       6
rofi.width:              50
rofi.location:           0
rofi.lines:              8
rofi.padding:            20
rofi.sidebar-mode:       false
rofi.fullscreen:         false

! ------------------------------------------------------------------------------
!                      ROFI Color theme
! ------------------------------------------------------------------------------

!argb
!				   'background', 'border', 'separator'
rofi.color-window: #cc000000,      #03cbca,  #ffffff

!rgba
! State:           'bg',     'fg',     'bgalt',  'hlbg',   'hlfg'
rofi.color-normal: #000000cc,  #f1f1f1,  #000000cc,  #03cbca,  #f1f1f1
rofi.color-urgent: #000000cc,  #f1f1f1,  #000000cc,  #03cbca,  #f1f1f1
rofi.color-active: #000000cc,  #f1f1f1,  #cc0000cc,  #03cbca,  #f1f1f1

rofi.ssh-client:ssh
rofi.ssh-command:          {st} -e "{ssh-client} {host}"
